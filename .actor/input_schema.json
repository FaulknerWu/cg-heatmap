{
    "title": "Coinglass Heatmap Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "coin": {
            "title": "Coin Symbol",
            "type": "string",
            "description": "Cryptocurrency symbol (e.g., BTC, ETH, SOL)",
            "default": "BTC",
            "editor": "textfield"
        },
        "exchange": {
            "title": "Exchange",
            "type": "string",
            "description": "Exchange name (e.g., Binance, OKX, Bybit)",
            "default": "Binance",
            "enum": ["Binance", "OKX", "Bybit", "Bitget", "dYdX"],
            "editor": "select"
        },
        "waitTimeout": {
            "title": "Wait Timeout (ms)",
            "type": "integer",
            "description": "Maximum time to wait for chart to load",
            "default": 10000,
            "minimum": 3000,
            "maximum": 30000,
            "editor": "number"
        },
        "headless": {
            "title": "Headless Mode",
            "type": "boolean",
            "description": "Run browser in headless mode",
            "default": true,
            "editor": "checkbox"
        }
    },
    "required": []
}
