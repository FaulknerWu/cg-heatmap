{
    "actorSpecification": 1,
    "name": "coinglass-heatmap",
    "title": "Coinglass Liquidation Heatmap",
    "description": "Screenshot Coinglass liquidation heatmap for cryptocurrency futures",
    "version": "0.5",
    "buildTag": "latest",
    "dockerfile": "./Dockerfile",
    "input": "./input_schema.json",
    "output": "./output_schema.json",
    "storages": {
        "dataset": {
            "actorSpecification": 1,
            "title": "Heatmap Results",
            "views": {
                "overview": {
                    "title": "Overview",
                    "transformation": {
                        "fields": ["success", "coin", "url", "timestamp"]
                    },
                    "display": {
                        "component": "table",
                        "properties": {
                            "success": { "label": "Success", "format": "boolean" },
                            "coin": { "label": "Coin", "format": "text" },
                            "url": { "label": "Screenshot URL", "format": "link" },
                            "timestamp": { "label": "Timestamp", "format": "text" }
                        }
                    }
                }
            }
        }
    }
}
